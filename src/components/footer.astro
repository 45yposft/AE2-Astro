---
import { Image } from "astro:assets";
import facebook from "../assets/Facebook_logo.svg";
import twitter from "../assets/twitter_logo.svg";
import feed from "../assets/feed_logo.svg";
---
<footer>
  <div class="footer__container">
    <div class="footer__info">
      <p>Designed by <span class="highlighted">ElegantThemes</span> | Powered by <span class="highlighted">meself</span></p>
    </div>
    <ul class="footer__social">
      <li class="footer__social--icon"><a href="/" class="facebook">
        <Image src={facebook} alt="icon of facebook" width={28}/>
      </a></li>
      <li class="footer__social--icon"><a href="/" class="twitter">
        <Image src={twitter} alt="icon of twitter" width={28}/>
      </a></li>
      <li class="footer__social--icon"><a href="/" class="feed">
        <Image src={feed} alt="icon of rssfeed" width={28} />
      </a></li>
    </ul>
  </div>
</footer>
